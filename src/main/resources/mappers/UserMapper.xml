<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.sheena.time.user.dao.UserDAO">

	<!-- 회원가입 -->
	<insert id="insertUser" parameterType="map">
		INSERT INTO `user`
		(
			`loginId`
			, `password`
			, `nickname`
			, `gender`
			, `email`
			, `createdAt`
			, `updatedAt`
		)
		VALUE
		(
			#{loginId}
			, #{password}
			, #{nickname}
			, #{gender}
			, #{email}
			, now()
			, now()
		)
	</insert>
	
	<!-- 아이디 중복확인 -->
	<select id="selectCountLoginId" parameterType="string" resultType="int">
		SELECT
			count(*)
		FROM
			`user`
		WHERE
			`loginId` = #{loginId}
	</select>
	
	<!-- 로그인 -->
	<select id="selectUser" parameterType="map" resultType="com.sheena.time.user.model.UserModel">
		SELECT
			`id`
			, `loginId`
			, `password`
			, `nickname`
			, `gender`
			, `email`
			, `createdAt`
			, `updatedAt`
		FROM
			`user`
		WHERE
			`loginId` = #{loginId}
			AND `password` = #{password}
	</select>
	
	
	<!-- Q&A 리스트 -->
	<select id="selectQuestionList" parameterType="int" resultType="com.sheena.time.user.model.QuestionModel">
		SELECT
			`id`
			, `userId`
			, `name`
			, `email`
			, `subject`
			, `content`
			, `answer`
			, `createdAt`
			, `updatedAt`
		FROM
			`question`
		WHERE
			`userId` = #{userId}
		ORDER BY `id` DESC
	
	
	</select>
	
	
	<!-- Q&A 디테일뷰 -->
	<select id="selectQuestion" parameterType="int" resultType="com.sheena.time.user.model.QuestionModel">
		SELECT
			`id`
			, `userId`
			, `name`
			, `email`
			, `subject`
			, `content`
			, `answer`
			, `createdAt`
			, `updatedAt`
		FROM
			`question`
		WHERE
			`id` = #{id}
	</select>

</mapper>