<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.sheena.time.post.dao.PostDAO">

	<!-- 커뮤니티_글쓰기 -->
	<insert id="insertPost" parameterType="map">
		INSERT INTO `post`
		(
			`userId`
			, `userNickname`
			, `subject`
			, `content`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
		)
		VALUE
		(
			#{userId}
			, #{userNickname}
			, #{subject}
			, #{content}
			, #{filePath}
			, now()
			, now()
		)
	
	</insert>
	
	
	<!-- 커뮤니티_리스트 -->
	<select id="selectPostList" parameterType="int" resultType="com.sheena.time.post.model.PostModel">
		SELECT
			`id`
			, `userId`
			, `userNickname`
			, `subject`
			, `content`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
		FROM
			`post`
		WHERE
			`userId` = #{userId}
		ORDER BY `id` DESC
	
	</select>
	
	
	<!-- 커뮤니티_게시글 상세페이지 modal창 띄우기 -->
	<!-- 커뮤니티 모든 사용자의 해당 게시글 디테일뷰 가져오기(도 같이 사용) -->
	<select id="selectId" parameterType="int" resultType="com.sheena.time.post.model.PostModel">
		SELECT
			`id`
			, `userId`
			, `userNickname`
			, `subject`
			, `content`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
		FROM
			`post`
		WHERE
			`id` = #{id}
	</select>
	
	
	<!-- community_메인 화면 모든 사용자의 게시글 가져오기 -->
	<select id="selectPostFullList" resultType="com.sheena.time.post.model.PostModel">
		SELECT
			`id`
			, `userId`
			, `userNickname`
			, `subject`
			, `content`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
		FROM
			`post`
		ORDER BY `id` DESC
	</select>
	
	
	<!-- 커뮤니티_게시글 수정 -->
	<update id="communityUpdatePost" parameterType="map">
		UPDATE `post`
		SET
			`subject` = #{subject}
			, `content` = #{content}
			, `updatedAt` = now()
		WHERE
			`id` = #{postId}
	</update>
	
	
	<!-- 커뮤니티_게시글 삭제 -->
	<delete id="communityDeletePost" parameterType="int">
		DELETE FROM `post`
		WHERE
			`id` = #{postId}
			AND `userId` = #{userId}
	
	</delete>
	
	
	<!-- 지식정보 리스트 -->
	<select id="selectManagerPostList" parameterType="int" resultType="com.sheena.time.managerPost.model.ManagerPostModel">
		SELECT
			`id`
			, `managerId`
			, `subject`
			, `content`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
		FROM
			`managerPost`
		ORDER BY `id` DESC
	
	</select>
	
	
	<!--지식정보 해당 디테일뷰 가져오기 -->
	<select id="selectManagerPost" parameterType="int" resultType="com.sheena.time.managerPost.model.ManagerPostModel">
		SELECT
			`id`
			, `managerId`
			, `subject`
			, `content`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
		FROM
			`managerPost`
		WHERE
			`id` = #{id}
	
	</select>

</mapper>