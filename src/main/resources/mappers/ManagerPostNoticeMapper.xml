<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.sheena.time.managerPostNotice.dao.ManagerPostNoticeDAO">

	<!-- 공지사항 리스트 -->
	<select id="selectManagerPostNotice" parameterType="int" resultType="com.sheena.time.managerPostNotice.model.NoticeModel">
		SELECT
			`id`
			, `managerId`
			, `subject`
			, `content`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
		FROM
			`notice`
		WHERE
			`managerId` = #{managerId}
		ORDER BY `id` DESC
	</select>
	
	
	<!-- 공지사항 작성 -->
	<insert id="insertManagerPostNotice" parameterType="map">
		INSERT INTO `notice`
		(
			`managerId`
			, `subject`
			, `content`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
		)
		VALUE
		(
			#{managerId}
			, #{subject}
			, #{content}
			, #{imagePath}
			, now()
			, now()
		)
	</insert>

</mapper>